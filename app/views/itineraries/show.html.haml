- if (template = template_for_current_view)
  = render(template, :itinerary => @itinerary)
- else

  -# default view

  = render 'itineraries/title_bar', :itinerary => @itinerary

  = render "comments/new", :commentable => @itinerary
  = render "itineraries/itinerary_items", :itinerary => @itinerary
  = render :partial => "shared/timeline", :collection => @timeline

  = hook(:show_itinerary_bottom, self, {entity: @itinerary}) do

    = render :partial => "versions/versions", :locals => {:object => @itinerary}
