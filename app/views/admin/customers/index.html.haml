= styles_for :customer

.title_tools
  = link_to_inline(:create_customer, new_admin_customer_path, :text => t(:create_customer))

.title
  %span#create_customer_title #{t :customers}
  = image_tag("loading.gif", :size => :thumb, :id => "loading", :style => "display: none;")
.remote#create_customer{ hidden }

.list#customers= render :partial => "admin/customers/customer", :collection => @customers
