
= form_for([:admin, @customer], :html => one_submit_only.merge({:autocomplete => 'off'}), :remote => true) do |f|
  = link_to_close new_admin_customer_path

  = f.error_messages :object_name => t('customer')

  = render "admin/users/profile", :f => f
